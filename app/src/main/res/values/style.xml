<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:textViewStyle">@style/PlayTextViewStyle</item>
        <item name="android:buttonStyle">@style/PlayButtonStyle</item>
    </style>

    <style name="PlayTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/play_regular</item>
    </style>

    <style name="PlayButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/play_regular</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="shapeAppearance">@null</item>
        <item name="boxStrokeWidthFocused">3dp</item>
    </style>
</resources>